{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Freelance Timeboard",
  "version": "0.1.0",
  "identifier": "com.umut.freelancetimeboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Freelance Timeboard",
        "width": 1280,
        "height": 860,
        "minWidth": 980,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png"
    ]
  }
}
